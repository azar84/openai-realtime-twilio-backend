# ====================================
# WebSocket Server Environment Variables - Heroku Compatible
# ====================================
# Copy this file to .env and fill in your actual values

# ====================================
# REQUIRED - OpenAI Configuration
# ====================================
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# REQUIRED - Database Configuration
# ====================================
# Option 1: Heroku PostgreSQL (recommended for production)
# DATABASE_URL=postgres://username:password@hostname:port/database

# Option 2: Individual database settings (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=openai_realtime_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# ====================================
# OPTIONAL - Server Configuration
# ====================================
# PORT is set by Heroku automatically, defaults to 8081 for local
# PORT=8081
NODE_ENV=development
PUBLIC_URL=http://localhost:8081

# ====================================
# OPTIONAL - N8N Integration
# ====================================
N8N_TOOL_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_SECRET=your_n8n_webhook_secret
